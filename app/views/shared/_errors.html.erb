<div class="container">
	
	<% if obj.errors.any? %>
	<div class="row">
		<div class="col-xs-8 col-xs-offset2">
			<div class="panel panel-danger">
			<div class="panel-heading">
				<h2 class="panel-title">
					<%= pluralize(obj.errors.count, "error") %>
					Reasons:
				</h2>
				<div class="panel-body">
					<ul>
						<% obj.errors.full_messages.each do |msg| %>
						<li><%= msg %></li>
						<% end %>
					</ul>
					
				</div>
			</div>
			</div>
			
		</div>
	</div>
	<h2>The article was not created, fix the following items</h2>
	<% end %>
</div>
