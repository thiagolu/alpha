<div class="container">
    <div class="row">
      <%= link_to 'Criar uma Conta', new_bill_path %>
    </div>
  </div>
</div>
<div class="container">

<hr>
<hr>
  <div class="panel panel-success">
    <div class="panel-heading">
      <div class="container">
        <h3 class="panel-title">
        Contas
        </h3>
        <div class="container">
          Total: <strong><%= @paid.sum(:value)%></strong>
        </div>
      </div>
    </div>
    <div class="panel-body">
      <table class="table">
        <tr><td><strong>Nome da conta</strong></td>
        <td><strong>Descrição</strong></td>
        <td><strong>Valor</strong></td>
        </tr>
        <% @paid.each do |bill| %>
        <tr>
          <td><%= bill.bill_name %></td>
          <td><%= bill.description %></td>
          <td><%= bill.value %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>

  <div class="panel panel-danger">
    <div class="panel-heading">
      <div class="container">
        <h3 class="panel-title">
        Contas
        </h3>
        <div class="container">
          Total: <strong><%= @not_paid.sum(:value)%></strong>
        </div>
      </div>
    </div>
    <div class="panel-body">
      <table class="table">
        <tr><td><strong>Nome da conta</strong></td>
        <td><strong>Descrição</strong></td>
        <td><strong>Valor</strong></td>
        </tr>
        <% @not_paid.each do |bill| %>
        <tr>
          <td><%= bill.bill_name %></td>
          <td><%= bill.description %></td>
          <td><%= bill.value %></td>
          <td><%= link_to 'Pay', pay_path(bill) %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
