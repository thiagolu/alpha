<div class="conatiner">
	<div class="row">
		<div class="col-xs-12">
			<%= form_for( @article, :html => { class: "form-horizontal", role: "form" } ) do |f| %>

			<div class="form-group">
				<div class="control-label-col-sm-2">
					<%= f.label :title %> <br/>
				</div>
				<div class="col-sm-8">
					<%= f.text_field :title, class: "form-control", placeholder: "Articles title", autofocus: true %>
				</div>
			</div>
			<br/>
			<div class="form-group">
				<div class="control-label-col-sm-2">
					<%= f.label :description %> 
				</div>
			</div>
			<div class="col-sm-8">

				<%= f.text_area :description, rows: 5, class: "form-control", placeholder: "Articles title", autofocus: true  %>
			</div>

			<div class="form-group">
				<div class="col-sm-10">

					<%= f.submit "Save", class: "btn btn-defautl" %>
				</div>
			</div>
			<%= link_to "Home", root_path %>
			<% end %>

		</div>
	</div>
</div>