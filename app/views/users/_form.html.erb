
<div class="conatiner">
<%= render 'shared/errors', obj: @user %>
		<div class="col-xs-12">
			<%= form_for( @user, :html => { class: "form-horizontal", role: "form" } ) do |f| %>

	<div class="row">
			<div class="form-group">
				<div class="control-label-col-sm-2">
					<%= f.label :username %> <br/>
				</div>
				<div class="col-sm-8">
					<%= f.text_field :username, class: "form-control", placeholder: "Username", autofocus: true %>
				</div>
			</div>
			<br/>
			<div class="form-group">
				<div class="control-label-col-sm-2">
					<%= f.label :email %> 
				</div>
			<div class="col-sm-8">

				<%= f.email_field :email, class: "form-control", placeholder: "Valid@email.address", autofocus: true  %>
			</div>
			</div>
			<div class="form-group">
			<div class="control-label-col-sm-2">
				<%= f.label :password %> 
			</div>
			<div class="col-sm-8">

				<%= f.password_field :password, class: "form-control", placeholder: "EAS@***///|**", autofocus: true  %>
			</div>

			</div>
			<div class="form-group">
				<div class="col-sm-10">

					<%= f.submit "Save", class: "btn btn-default" %>
				</div>
			</div>
			<%= link_to "Home", root_path %>
			<% end %>

		</div>
	</div>
</div>