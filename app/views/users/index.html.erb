<div class="row">
	<h2 align="center">Usu√°rios</h2>
	<div align="left" class="container">
		<div class="col-xs-8 col-xs-offset-2">
			<div class="well">
				<% @users.each do |user| %>
					<div class="row">
						<br/>
						<%= link_to gravatar_for(user), user_path(user) %>
						<h4><strong><%= user.username.capitalize %></strong></h4>
						<small><%= pluralize(user.articles.count, 'article') if user.articles.any? %></small>
						<% if user.role == 'admin' %>
						<%= link_to 'Delete', user_path(user), method: :delete, data: { confirm: "Are You sure ?" } %>
						<% end %>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>
