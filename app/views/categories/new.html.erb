
<div class="container">
	<div class="col-xs-12">
		<%= form_for( @category, :html => { class: "form-horizontal", role: "form" } ) do |f| %>

		<div class="row">
			<div class="form-group">
				<div class="control-label-col-sm-2">
					<%= f.label :category_name %> <br/>
				</div>
				<div class="col-sm-8">
					<%= f.text_field :category_name, class: "form-control", placeholder: "Category name:", autofocus: true %>
				</div>
			</div>
			<br/>
			</div>
			<div class="form-group">
				<div class="col-sm-10">

					<%= f.submit "Save", class: "btn btn-default" %>
				</div>
			</div>
			<%= link_to "Home", root_path %>
			<% end %>

		</div>
</div>
